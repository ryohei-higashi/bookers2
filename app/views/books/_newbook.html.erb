<!--New bookの部分テンプレート-->
<h2>New book</h2>
<div>
<%= form_with model:book, local: true do |f| %>
  <div class="form-group">
    <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </p>
  </div>
  <div class="form-group">
    <p>
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
    </p>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>
</div>
