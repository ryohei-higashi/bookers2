<!--ユーザー一覧表示-->

<div class="body">
  <div class="container px-5 px-sm-0">

    <!--エラーメッセージ-->
    <div class="error_messege">
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <!--サイドバー-->
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/userinfo', user: @user %><!--User infoの部分テンプレート-->
        <%= render 'books/newbook', book: @book_new %><!--New bookの部分テンプレート-->
      </div>

      <!--ユーザー一覧-->
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th><!--show--></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                  <% if @user.profile_image.attached? %>
                    <%= image_tag @user.profile_image, size: "40x40" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "40x40" %>
                  <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>